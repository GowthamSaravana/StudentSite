<html>
<head>
<title><%= title%></title>
<style>
table {
font-family: arial, sans-serif;
border-collapse: collapse;
width: 70%;
}

td {
border: 1px solid #dddddd;
text-align: left;
padding: 8px;
}

tr:nth-child(even) {
background-color: #dddddd;
}
table.center {
  margin-left: auto;
  margin-right: auto;
}
th {
  padding :8px;
  text-align: left;
  background-color: #4CAF50;
  color: white;
}
body{
  background: #f1f1f1;
}
.topnav {
  overflow: hidden;
  background-color: #333;
}

/* Style the topnav links */
.topnav a {
  float: left;
  display: block;
  color: #f2f2f2;
  text-align: center;
  padding: 14px 16px;
  text-decoration: none;
}

/* Change color on hover */
.topnav a:hover {
  background-color: #ddd;
  color: black;
}
.header {
  padding: 30px;
  text-align: center;
  background: white;
}
.container {
  border-radius: 5px;
  background-color: #f2f2f2;
  padding: 20px;
}
@media screen and (max-width: 800px) {
  .leftcolumn, .rightcolumn {
    width: 100%;
    padding: 0;
  }
}

/* Responsive layout - when the screen is less than 400px wide, make the navigation links stack on top of each other instead of next to each other */
@media screen and (max-width: 400px) {
  .topnav a {
    float: none;
    width: 100%;
  }
}

</style>
</head>

<body>
  <div class="header">
    <h3>STUDENT DETAILS</h3>
  </div>
  <div class="topnav">
    <a href="/info/stud/new">Create New Student</a>
    <a href="/info/index" style="float:right">Back to Index</a>
  </div>
  <div class="container">
  <div style="overflow-x:auto;">
  <table class="center">
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Delete</th>
    </tr>
  <% studentlist.forEach(function(studentt){ %>
      <!-- Output name from the iterated quote object -->

        <tr>
        <td><%= studentt.name %></td>
        <td><%= studentt.age %></td>
        <td><a href="studentlist/<%= studentt._id %>/delete"
 onclick="return confirm('Are you sure you want to delete this record?')">Delete</a></td>
    </tr>

  <% }) %>
  </table>
</div>
</div>
</body>
</html>
